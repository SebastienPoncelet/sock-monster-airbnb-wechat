<!--pages/show/show.wxml-->

<!--image of washing machine-->
 <view class="image" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://picsum.photos/200/300/?random');">
  </view>

<!--Washing machine info (name, description and type-->
<view class="machine-info"> 
  <view class="machine-name">
    <text>Best machine ever</text>
  </view>
  <view class="machine-type">
    <text>Washing Machine</text>
  </view>
  <view class="machine-description">
    <text>This is such a fantastic washing machine, I really recommend it, it has changed my sock washing ways</text>
  </view>
  <!--Avatar-->
  <view class="avatar" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://picsum.photos/200/300/?random');"></view>
</view>

<!--Price-->
<view class="price">
  <text>$5</text>
</view>


<!--Book button made with wechat default -->
  <view class="book-button" >
    <button type="primary" size="{{primarySize}}" loading="{{loading}}" plain="{{plain}}"
        disabled="{{disabled}}" bindtap="primary">Book</button>
  </view>
