<!--pages/show/show.wxml-->

<view class="container">
  <!--------------IMAGE of washing machine-------------------->
  <view class="image" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://picsum.photos/200/300/?random');">
  </view>

  <!--WASHING MACHINE INFO (name, address, type, avatar)------>
  <view class="machine-info"> 
      <view class="machine-name">
        <text>Best machine ever</text>
      </view>
      <view class="machine-type">
        <text>Washing Machine Type</text>
      </view>
      <view class="machine-address">
          <text>221b Baker Street, North London</text>
      </view>
      <!--Avatar-->
      <view class="avatar" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://kitt.lewagon.com/placeholder/users/tgenaitay');"></view>
      </view>
  </view>
  
    <!---------------SOCK COUNT AND MESSAGE BUTTONS------------->
    <view class="green-buttons">
        <view class="machine-sock-count">I've eaten 99 socks</view>
        <view class="message">Message</view>
    </view>

    <!----------DESCRIPTION---------------------->
  <view class="machine-description">
      <text>This is such a fantastic washing machine, I really recommend it, it has changed my sock washing ways

      This is such a fantastic washing machine, I really recommend it, it has changed my sock washing ways

      This is such a fantastic washing machine, I really recommend it, it has changed my sock washing ways

           This is such a fantastic washing machine, I really recommend it, it has changed my sock washing ways
      </text>
  </view>

    <!---------FIXED BAR ----------------->
  <view class="fixed-bar">
    <!--Price-->
    <view class="price">
      <text>$5</text>
      <text class="per-night"> /day</text>
    </view>
    <!--Book button -->
    <view class="book-button" >Request to Book</view>
