/* pages/show/show.wxss */

.image {
  height: 37vh;
  width: 100vw;
  background-size: cover !important;
  background-position: center;
  color: white;
  position: relative;
  /* border-radius: 6px; */
  box-shadow: 0px 3px 15px rgba(0,0,0,0.2);
  /* margin-top: 20px; */
}

.avatar {
  width: 12vh;
  height: 12vh;
  border-radius: 50%;
  margin: 20px;
  position: absolute;
  right: 9vh;
  top: 37vh;
  background-size: 100%;
  border: 2px solid white;
  box-shadow: 3px 3px 12px rgba(0,0,0,0.2);
}


.machine-info {
  margin: 10px;
  display: flex;
  flex-direction: column;
  width: 85%;
}

.machine-info .machine-name {
  font-weight: bolder;
  font-size: 22px;
   padding: 5px;
   color: #484848;
}

.green-buttons {
  display: flex;
  justify-content: space-around;
  width: 100%;
}
.green-buttons .machine-sock-count {
  border: 1px solid #1D3557;
  padding: 12px;
  font-size: 15px;
  border-radius: 30px;
  margin: 15px 0px;
  width: 80%;
  text-align: center;
  color: #484848;
  font-weight:600;
  font-size:16px;

  /* position: absolute;
  top: 340px; */
}

.green-buttons .message {
  border: 1px solid #1D3557;
  padding: 11px;
  font-size: 15px;
  border-radius: 18px;
  margin: 15px 0px;
  width: 30%;
  text-align: center;
  /* color: #484848; */
  color: white;
  background-color: #1D3557;
  /* position: relative;
  left: 236px; */
}

.machine-info .machine-type {
  font-size: 12px;
  padding: 5px;
  color: #1D3557;
  font-weight: bold;
}

.machine-description {
  font-size: 14px;
  font-weight: normal;
  padding: 5px;
  color: #484848;
  margin: 18px;
}

.machine-info .machine-address {
    font-size: 13px;
    padding: 5px;
    color: #808080;
}

.fixed-bar .price {
  font-size: 20px;
  font-weight: bold;
  padding: 27px;
  color: #484848;
}

.per-night {
  font-size: 12px;
}

