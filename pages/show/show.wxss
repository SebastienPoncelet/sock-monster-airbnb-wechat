.book-button {
  background-color: #27AE60;
  width: 140px;
  border-radius: 18px;
  text-align: center;
  padding: 15px;
  color: white;
  font-size: 15px;
  font-weight: bold;
  margin: 15px;
  opacity: 0.9;
}

.book-button:hover {
  opacity: 1;
}

.fixed-bar {
  background-color: white;
  position: fixed;
  bottom: 0;
  justify-content: space-around;
  display: flex;
  width: 100vw;
  border-top: 2px solid #F0F0F0;
}

