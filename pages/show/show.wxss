/* pages/show/show.wxss */

.image {
  height: 200px;
  width: 270px;
  background-size: cover !important;
  background-position: center;
  color: white;
  position: relative;
  border-radius: 6px;
}

.avatar {
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
  margin: 20px;
  position: absolute;
  right: 10px;
  top: 200px;

}

.machine-info {
  margin: 20px;
  display: flex;
  flex-direction: column;
}

.machine-info .machine-name {
  font-weight: bold;
  font-size: 22px;
   padding: 5px;

}

.machine-info .machine-type {
  font-size: 14px;
  padding: 5px;
}

.machine-info .machine-description {
  font-size: 13px;
  font-weight: lighter;
  padding: 5px;
}

.price {
  font-size: 20px;
  font-weight: bold;
  padding: 15px;
  margin-right: 12px;
}

.per-night {
  font-size: 12px;
}

