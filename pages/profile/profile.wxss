/* pages/profile/profile.wxss */

.weui-tab {
  position: relative;
  height: 100%;
  top: 24px;
  color: #484848;
}

.weui-navbar__title {
  color:#484848;
}

.avatar {
  width: 220rpx;
  height: 220rpx;
  border-radius: 50%;
  position: relative;
  top : 70px;
}

.name {
  font-size: 29px;
  padding: 19px;
  color: #484848;
  font-weight: bold;
  margin-top: 55px;

}

.avatar-name {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 2%;
  color: #484848;
  margin-top: -15%;
 }


.tab {
  flex: 0 0 50%;
  text-align: center;
}

.tab .active {
  border-bottom: 2px solid #1D3557;
}

.cards {
  margin-top: 58px;
}
.card {
  display: flex;
  flex-direction: column;
  margin: 19px;
  height: 30vh;
  box-shadow: 0px 3px 15px rgba(0,0,0,0.2);
  border-radius: 6px;
  position: relative;

}
.card-body {
  height: 80%;
  text-shadow: 0 1px 3px rgba(0,0,0,0.6);
  background-size: cover !important;
  background-position: center;
  color: white;
  position: relative;
  border-radius: 6px 6px 0 0;
}

.pending-button {
  height: 9vh;
  width: 15vh;
  border-radius: 50%;
  border: 2px solid white;
  position: absolute;
  right: 16%;
  top: 79%;
  color: white;
  font-size: 14px;
  background-color: #F2994A;
}

.approved-button {
  background-color: #27AE60;
  height: 9vh;
  width: 9vh;
  border-radius: 50%;
  border: 2px solid white;
  position: absolute;
  right: 16%;
  top: 79%;
  color: white;
  font-size: 14px;
}

 .card-description .h2 {
  font-size: 20px;
  padding: 10px;
  position: absolute;
  top: 157px;
  font-weight: bold;
}

.card-footer .name {
  font-size: 14px;
  padding: 14px;
  /* color: #808080; */
  color: #1D3557;
  }

.card-footer {
  background-color: white;
  height: 20%;
  border-radius: 6px;
  display: flex;
  justify-content: space-between;
  align-items: center
}

.card-description .dates {
font-size: 14px;
  padding: 8px;
  color: white;
  font-weight: bolder;
  background-color: rgba(0, 0, 0, 0.5);
  position: absolute;
  top: 9px;
  left: 10px;
}


.card-footer .status-approved {
  background-color: #27AE60;
  border-radius: 5px;
  color: white;
  font-size: 14px;
  padding: 3px;
  margin: 14px;
}

.card-footer .status-denied {
  background-color: #EB5757;
  border-radius: 5px;
  color: white;
  font-size: 14px;
  padding: 3px;
  margin: 14px;
}

.card-footer .status-pending {
  background-color: #F2994A;
  border-radius: 5px;
  color: white;
  font-size: 14px;
  padding: 3px;
  margin: 14px;
}
