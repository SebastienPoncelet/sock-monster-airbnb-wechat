 <!--CARDS-->
<view class="cards">
  <block wx:for="{{machines}}" wx:for-item="machine" >
    <view class="card" bindtap='showMachine' data-id="{{machine.id}}">
          <view class="card-body" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://picsum.photos/200/300/?random');">
              <view class="card-description">
              <!--machine name -->
              <!--price-->
              <text class="price">${{machine.price}}/day</text>
              <view class="h2">{{machine.name}}</view>
              <view class="avatar" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://kitt.lewagon.com/placeholder/users/tgenaitay');"></view>
              </view>
              </view>
                <view class="card-footer">
                  <text class='sock_count'>I've eaten {{machine.sock_count}} socks</text>
                </view>
          </view>
        </block>
    </view>

