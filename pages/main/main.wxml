 <!--CARDS-->
<view wx:for="{{machines}}" wx:for-item="machine" >
      <view class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://picsum.photos/200/300/?random');">
          <view class="card-description">
              <!--machine name -->
              <view class="h2">{{machine.name}}</view>
              <!--price-->
              <text class="p">{{machine.price}}Price</text>
              <view class="avatar" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://picsum.photos/200/300/?random');"></view>
        </view>
      </view>
</view>




