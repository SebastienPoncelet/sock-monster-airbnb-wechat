/**card info**/
.card-body {
  height: 127px;
  text-shadow: 0 1px 3px rgba(0,0,0,0.6);
  background-size: cover !important;
  background-position: center;
  color: white;
  position: relative;
  border-radius: 6px;
  margin: 20px;
}

.avatar {
  position: absolute;
  left: 10px;
  top: 10px;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 2px solid white;
}

 .card-description .h2 {
  font-size: 16px;
  padding: 15px;
  position: absolute;
  top: 50px;
  font-weight: bold;
}

.card-footer .price {
  font-size: 14px;
  position: absolute;
  bottom: 10px;
  right: 10px;
  padding: 10px;
  color: white;
  font-weight: bold;
}

